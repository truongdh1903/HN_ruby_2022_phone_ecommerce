  <div class="container">
    <div class="row">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to t("home"), root_path, class: "active" %>
          </li>
          <li>
            <%= link_to t("header.shop_page"), shop_path %>
          </li>
          <li>
            <%= link_to t("header.product"), products_path %>
          </li>
          <li>
            <%= link_to t("header.cart"), cart_path %>
          </li>
          <li>
            <%= link_to t("header.checkout"), checkout_path %>
          </li>
          <li>
            <a href="#">
              <%= t "header.category" %>
            </a>
          </li>
          <li>
            <a href="#">
              <%= t "header.contact"%>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- End mainmenu area -->
